<?xml version="1.0"?>
<page layout="1column"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <container name="most-popular" htmlTag="div" htmlClass="most-popular" after="page.main.title">
                <block class="Conceptive\Commerce\Block\Index" name="most-popular-product" template="Conceptive_Commerce::most_popular.phtml" />
            </container>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Conceptive\Commerce\Block\Index" name="category_content" template="Conceptive_Commerce::categoryContent.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>